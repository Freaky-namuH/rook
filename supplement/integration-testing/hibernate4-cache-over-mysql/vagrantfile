#
# unpacked version of box available at:
# https://github.com/shyiko/mysql-binlog-connector-java/tree/master/supplement/vagrant/mysql-5.6.12-sandbox
#
Vagrant.configure("2") do |config|
    config.vm.box = 'mysql-5.5.27-sandbox'
    config.vm.box_url = 'http://ubuntuone.com/2h49wr0eoPQfJkfnvgoS0s'
    config.vm.provision :shell, :inline => %Q(
        (cd sandboxes/rsandbox_mysql-5_5_27 && ./m -e 'create database rook_h4cs_test; create database rook_h4cs_sdb_test')
    )
    config.vm.network :forwarded_port, guest: 33061, host: 33061
    config.vm.network :forwarded_port, guest: 33062, host: 33062
end
